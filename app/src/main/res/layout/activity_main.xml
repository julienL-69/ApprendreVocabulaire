<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ndroid="http://schemas.android.com/apk/res-auto"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/texteAfficher"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="@string/mot1_fr" />

    <TextView
        android:id="@+id/texteRomaji"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="@string/mot1_jap" />

    <TextView
        android:id="@+id/texteHira"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="hirakana ou katakana" />


    <TextView
        android:id="@+id/texteCompteRebours"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
       android:visibility="invisible"
        android:textSize="10dp"
        android:text="3" />

    <Button
        android:id="@+id/boutonMotSuivant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mot suivant" />

    <Button
        android:id="@+id/boutonAfficherReponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reponse en Romaji et Hira/kata" />

    <Button
        android:id="@+id/boutonChangerListe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Changement liste vocabulaire" />

    <TextView
        android:id="@+id/texteNomListeEncours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="@string/ListeEncours" />

    <TextView
        android:id="@+id/texteNboccurence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="Nombre de mot restant:" />


</LinearLayout>